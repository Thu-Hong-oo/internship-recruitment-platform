{
  "info": {
    "name": "Saved Jobs API",
    "description": "Saved jobs management endpoints for bookmarking and tracking job applications",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "api_url",
      "value": "http://localhost:3000/api",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Get Saved Jobs",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
        "url": {
          "raw": "{{api_url}}/saved-jobs?page=1&limit=10&status=saved",
          "host": ["{{api_url}}"],
          "path": ["saved-jobs"],
          "query": [
            {"key": "page", "value": "1"},
            {"key": "limit", "value": "10"},
            {"key": "status", "value": "saved"}
          ]
        }
      }
    },
    {
      "name": "Save Job",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{token}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"jobId\": \"{{job_id}}\",\n  \"notes\": \"Interesting position, good company culture\",\n  \"tags\": [\"frontend\", \"react\", \"priority\"],\n  \"priority\": \"high\"\n}"
        },
        "url": {
          "raw": "{{api_url}}/saved-jobs",
          "host": ["{{api_url}}"],
          "path": ["saved-jobs"]
        }
      }
    },
    {
      "name": "Update Saved Job",
      "request": {
        "method": "PUT",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{token}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"applied\",\n  \"notes\": \"Applied on 2024-01-15\",\n  \"reminder\": {\n    \"date\": \"2024-02-01\",\n    \"message\": \"Follow up on application\"\n  }\n}"
        },
        "url": {
          "raw": "{{api_url}}/saved-jobs/{{saved_job_id}}",
          "host": ["{{api_url}}"],
          "path": ["saved-jobs", "{{saved_job_id}}"]
        }
      }
    },
    {
      "name": "Remove Saved Job",
      "request": {
        "method": "DELETE",
        "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
        "url": {
          "raw": "{{api_url}}/saved-jobs/{{saved_job_id}}",
          "host": ["{{api_url}}"],
          "path": ["saved-jobs", "{{saved_job_id}}"]
        }
      }
    }
  ]
}
