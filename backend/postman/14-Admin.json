{
  "info": {
    "name": "Admin API",
    "description": "Administrative endpoints for user management, system monitoring, and platform administration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "api_url",
      "value": "http://localhost:3000/api",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Get All Users (Admin)",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
        "url": {
          "raw": "{{api_url}}/admin/users?page=1&limit=20&role=student&status=active",
          "host": ["{{api_url}}"],
          "path": ["admin", "users"],
          "query": [
            {"key": "page", "value": "1"},
            {"key": "limit", "value": "20"},
            {"key": "role", "value": "student"},
            {"key": "status", "value": "active"}
          ]
        }
      }
    },
    {
      "name": "Get User (Admin)",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
        "url": {
          "raw": "{{api_url}}/admin/users/{{user_id}}",
          "host": ["{{api_url}}"],
          "path": ["admin", "users", "{{user_id}}"]
        }
      }
    },
    {
      "name": "Create User (Admin)",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{token}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"admin123\",\n  \"firstName\": \"Admin\",\n  \"lastName\": \"User\",\n  \"role\": \"admin\"\n}"
        },
        "url": {
          "raw": "{{api_url}}/admin/users",
          "host": ["{{api_url}}"],
          "path": ["admin", "users"]
        }
      }
    },
    {
      "name": "Update User (Admin)",
      "request": {
        "method": "PUT",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{token}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"role\": \"employer\",\n  \"isActive\": true\n}"
        },
        "url": {
          "raw": "{{api_url}}/admin/users/{{user_id}}",
          "host": ["{{api_url}}"],
          "path": ["admin", "users", "{{user_id}}"]
        }
      }
    },
    {
      "name": "Delete User (Admin)",
      "request": {
        "method": "DELETE",
        "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
        "url": {
          "raw": "{{api_url}}/admin/users/{{user_id}}",
          "host": ["{{api_url}}"],
          "path": ["admin", "users", "{{user_id}}"]
        }
      }
    },
    {
      "name": "Update User Status (Admin)",
      "request": {
        "method": "PUT",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{token}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"suspended\",\n  \"reason\": \"Policy violation\"\n}"
        },
        "url": {
          "raw": "{{api_url}}/admin/users/{{user_id}}/status",
          "host": ["{{api_url}}"],
          "path": ["admin", "users", "{{user_id}}", "status"]
        }
      }
    },
    {
      "name": "Get Dashboard Stats (Admin)",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
        "url": {
          "raw": "{{api_url}}/admin/dashboard",
          "host": ["{{api_url}}"],
          "path": ["admin", "dashboard"]
        }
      }
    },
    {
      "name": "Get User Analytics (Admin)",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
        "url": {
          "raw": "{{api_url}}/admin/analytics/users?period=month",
          "host": ["{{api_url}}"],
          "path": ["admin", "analytics", "users"],
          "query": [{"key": "period", "value": "month"}]
        }
      }
    },
    {
      "name": "Get Pending Verifications (Admin)",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
        "url": {
          "raw": "{{api_url}}/admin/verifications?status=pending&page=1&limit=10",
          "host": ["{{api_url}}"],
          "path": ["admin", "verifications"],
          "query": [
            {"key": "status", "value": "pending"},
            {"key": "page", "value": "1"},
            {"key": "limit", "value": "10"}
          ]
        }
      }
    },
    {
      "name": "Verify Employer (Admin)",
      "request": {
        "method": "PUT",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{token}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"verified\": true,\n  \"verificationMethod\": \"manual_review\",\n  \"documents\": [\"business_license\", \"tax_certificate\"]\n}"
        },
        "url": {
          "raw": "{{api_url}}/admin/verifications/{{verification_id}}",
          "host": ["{{api_url}}"],
          "path": ["admin", "verifications", "{{verification_id}}"]
        }
      }
    },
    {
      "name": "Get System Health (Admin)",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
        "url": {
          "raw": "{{api_url}}/admin/system/health",
          "host": ["{{api_url}}"],
          "path": ["admin", "system", "health"]
        }
      }
    },
    {
      "name": "Get System Logs (Admin)",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
        "url": {
          "raw": "{{api_url}}/admin/system/logs?level=error&limit=100",
          "host": ["{{api_url}}"],
          "path": ["admin", "system", "logs"],
          "query": [
            {"key": "level", "value": "error"},
            {"key": "limit", "value": "100"}
          ]
        }
      }
    }
  ]
}
